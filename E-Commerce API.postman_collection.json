					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// 1. Check if the request was successful (HTTP status code 200)\r",
									"if (pm.response.code === 200) {\r",
									"    // 2. Parse the JSON response body\r",
									"    const responseData = pm.response.json();\r",
									"\r",
									"    // 3. Check if the access_token exists in the response\r",
									"    if (responseData && responseData.token) {\r",
									"        // 4. Extract the token value\r",
									"        const JWTtoken = responseData.token;\r",
									"\r",
									"        // 5. Set the token as a COLLECTION variable named 'accessToken'\r",
									"        //    This makes it available to ALL requests in this collection.\r",
									"        pm.collectionVariables.set(\"JWTtoken\", JWTtoken);\r",
									"\r",
									"        // Optional: Log a message to the Postman Console to confirm\r",
									"        console.log(\"Access Token successfully saved to Collection Variable: \" + JWTtoken);\r",
									"    } else {\r",
									"        console.warn(\"Login successful but 'access_token' field not found in response.\");\r",
									"    }\r",
									"} else {\r",
									"    console.error(\"Login failed with status code: \" + pm.response.code);\r",
									"}"
								],
